@page
@model ShoppingCart.Pages.ProductsPageModel

@{
}
<div class="row">
    <div class="col-md-9">
        <h1>Products</h1>
    </div>
    <div class="col-md-3 text-right">
        <a href="Cart" class="btn btn-secondary">Cart</a>
    </div>
</div>
<div class="row">
    @foreach (var product in Model.ProductItems)
    {
        var photoPath = "~/images/cartApp/" + (product.ImageURL) + ".png";
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@photoPath" class="w-100" asp-append-version="true" />
                <div class="card-body text-center">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text">Price: $@product.Price</p>
                    <button class="btn btn-primary">Add to Cart</button>
                </div>
            </div>
        </div>
    }
</div>

